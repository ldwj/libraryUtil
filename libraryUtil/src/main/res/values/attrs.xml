<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--输入验证码控件-->
    <declare-styleable name="NumberInputView">
        <!-- 密码框数量 -->
        <attr name="count" format="integer" />
        <!-- 密码字体大小 -->
        <attr name="passwordSize" format="integer" />
        <!-- 是否显示输入的密码 -->
        <attr name="showPassword" format="boolean" />
        <!-- 下一个待输入的密码框的背景 -->
        <attr name="bgInputing" format="reference" />
        <!-- 已经输入了密码框的背景 -->
        <attr name="bgInputed" format="reference" />
    </declare-styleable>
    <!--圆环形进度条-->
    <declare-styleable name="CircleProgressView">
        <!--画笔宽度-->
        <attr name="progress_width" format="dimension" />
        <!--画笔颜色-->
        <attr name="progress_color" format="color" />
        <!--加载进度起始位置-->
        <attr name="location_start" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>
    <!--多状态view-->
    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="LoadingView">
        <attr name="loadingText" format="string"/>
        <attr name="loadingTextAppearance" format="reference"/>
    </declare-styleable>
</resources>
